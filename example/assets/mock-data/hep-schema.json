                  "noAdditionalProperties": true, 
                  "properties": {
                    "type": {
                      "enum": [
                        "INSPIRE ID"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
                      "pattern": "^INSPIRE-\\d{8}$", 
                      "type": "string"
                    }
                  }, 
                  "type": "object"
                }, 
                {
                  "noAdditionalProperties": true, 
                  "properties": {
                    "type": {
                      "enum": [
                        "INSPIRE BAI"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
                      "pattern": "^(\\w+\\.)+\\d+$", 
                      "type": "string"
                    }
                  }, 
                  "type": "object"
                }, 
                {
                  "noAdditionalProperties": true, 
                  "properties": {
                    "type": {
                      "enum": [
                        "ORCID"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
