                    "type": {
                      "enum": [
                        "KAKEN"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
                      "pattern": "^KAKEN-\\d{8}$", 
                      "type": "string"
                    }
                  }, 
                  "type": "object"
                }, 
                {
                  "noAdditionalProperties": true, 
                  "properties": {
                    "type": {
                      "enum": [
                        "ARXIV"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
                      "pattern": "^\\w+_(\\w_)?\\d+$", 
                      "type": "string"
                    }
                  }, 
                  "type": "object"
                }, 
                {
                  "noAdditionalProperties": true, 
                  "properties": {
                    "type": {
                      "enum": [
                        "CERN"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
                      "pattern": "^CERN-\\d+$", 
                      "type": "string"
                    }
                  }, 
                  "type": "object"
                }, 
                {
                  "noAdditionalProperties": true, 
                  "properties": {
                    "type": {
                      "enum": [
                        "DESY"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
                      "pattern": "^DESY-\\d+$", 
                      "type": "string"
                    }
                  }, 
                  "type": "object"
                }, 
                {
                  "noAdditionalProperties": true, 
                  "properties": {
                    "type": {
                      "enum": [
                        "GOOGLESCHOLAR"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
                      "pattern": "^(\\w|-){12}$", 
                      "type": "string"
                    }
                  }, 
                  "type": "object"
                }, 
                {
                  "noAdditionalProperties": true, 
                  "properties": {
                    "type": {
                      "enum": [
                        "VIAF"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
                      "pattern": "^\\d{7,9}$", 
                      "type": "string"
                    }
                  }, 
                  "type": "object"
                }, 
                {
                  "noAdditionalProperties": true, 
                  "properties": {
                    "type": {
                      "enum": [
                        "RESEARCHERID"
