                    "type": {
                      "enum": [
                        "SCOPUS"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
                      "pattern": "^\\d{10,11}$", 
                      "type": "string"
                    }
                  }, 
                  "type": "object"
                }, 
                {
                  "noAdditionalProperties": true, 
                  "properties": {
                    "type": {
                      "enum": [
                        "WIKIPEDIA"
                      ], 
                      "type": "string"
                    }, 
                    "value": {
