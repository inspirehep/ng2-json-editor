{
  "$schema": "http://json-schema.org/schema#", 
  "noAdditionalProperties": true, 
  "properties": {
    "_private_note": {
      "type": "string"
    },
    "$schema": {
      "format": "url",
      "type": "string"
    },
    "acquisition_source": {
      "$schema": "http://json-schema.org/schema#", 
      "noAdditionalProperties": true, 
      "properties": {
        "date": {
          "type": "string"
        }, 
        "email": {
          "type": "string"
        }, 
        "method": {
          "type": "string"
        }, 
        "orcid": {
          "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{3}[0-9X]$", 
          "type": "string"
        }, 
        "source": {
          "type": "string"
        }, 
        "submission_number": {
          "type": "string"
        }
      }, 
      "type": "object"
    }, 
    "advisors": {
      "items": {
        "noAdditionalProperties": true, 
        "properties": {
          "_degree_type": {
            "type": "string"
          }, 
          "curated_relation": {
            "type": "boolean"
          }, 
          "degree_type": {
            "$schema": "http://json-schema.org/schema#", 
            "enum": [
              "Other", 
              "Diploma", 
              "Bachelor", 
              "Laurea", 
              "Master", 
              "PhD", 
              "Habilitation"
            ], 
            "title": "Degree type", 
            "type": "string"
          }, 
          "name": {
            "type": "string"
          }, 
          "record": {
            "$schema": "http://json-schema.org/schema#", 
            "noAdditionalProperties": true, 
            "properties": {
              "$ref": {
                "description": "URL to the referenced resource", 
                "format": "url", 
                "type": "string"
              }
            }, 
            "required": [
              "$ref"
            ], 
            "type": "object"
          }
        }, 
        "type": "object"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "author_note": {
      "description": "Contains public note.", 
      "type": "string"
    }, 
    "birth_date": {
      "description": "Stores birth date", 
      "format": "date", 
      "type": "string"
    }, 
    "collections": {
      "items": {
        "noAdditionalProperties": true, 
        "properties": {
          "primary": {
            "type": "string"
          }
        }, 
        "type": "object"
      }, 
      "minItems": 1, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "conferences": {
      "description": "Contains information about attended conferences. (their record URIs)", 
      "items": {
        "$schema": "http://json-schema.org/schema#", 
        "noAdditionalProperties": true, 
        "properties": {
          "record": {
            "$schema": "http://json-schema.org/schema#",
            "properties": {
              "$ref": {
                "description": "URL to the referenced resource",
                "format": "url",
                "type": "string"
              }
            },
            "required": [
              "$ref"
            ],
            "type": "object"
          }
        }, 
        "required": [
          "$ref"
        ], 
        "type": "object"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "death_date": {
      "description": "Stores death date (if any)", 
      "format": "date", 
      "type": "string"
    }, 
    "deleted": {
      "type": "boolean"
    }, 
    "email_addresses": {
      "description": "Contains current email addresses", 
      "items": {
        "format": "email", 
        "type": "string"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "experiments": {
      "description": "Contains information about experiments.", 
      "items": {
        "noAdditionalProperties": true, 
        "properties": {
          "curated_relation": {
            "type": "boolean"
          }, 
          "current": {
            "type": "boolean"
          }, 
          "end_year": {
            "type": "integer"
          }, 
          "name": {
            "type": "string"
          }, 
          "record": {
            "$schema": "http://json-schema.org/schema#", 
            "noAdditionalProperties": true, 
            "properties": {
              "$ref": {
                "description": "URL to the referenced resource", 
                "format": "url", 
                "type": "string"
              }
            }, 
            "required": [
              "$ref"
            ], 
            "type": "object"
          }, 
          "start_year": {
            "type": "integer"
          }
        }, 
        "type": "object"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "ids": {
      "items": {
        "$schema": "http://json-schema.org/schema#", 
        "anyOf": [
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "INSPIRE ID"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^INSPIRE-\\d{8}$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "INSPIRE BAI"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^(\\w+\\.)+\\d+$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "ORCID"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{3}[0-9X]$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "JACOW"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^JACoW-\\d{8}$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "KAKEN"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^KAKEN-\\d{8}$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "ARXIV"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^\\w+_(\\w_)?\\d+$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "CERN"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^CERN-\\d+$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "DESY"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^DESY-\\d+$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "GOOGLESCHOLAR"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^(\\w|-){12}$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "VIAF"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^\\d{7,9}$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "RESEARCHERID"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^[A-z]-\\d{4}-\\d{4}$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "SCOPUS"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^\\d{10,11}$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "WIKIPEDIA"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^\\w+$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }, 
          {
            "noAdditionalProperties": true, 
            "properties": {
              "type": {
                "enum": [
                  "SLAC"
                ], 
                "type": "string"
              }, 
              "value": {
                "pattern": "^SLAC-\\d+$", 
                "type": "string"
              }
            }, 
            "type": "object"
          }
        ], 
        "required": [
          "type", 
          "value"
        ]
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "inspire_categories": {
      "items": {
        "$schema": "http://json-schema.org/schema#", 
        "noAdditionalProperties": true, 
        "properties": {
          "source": {
            "enum": [
              "curator", 
              "magpie", 
              "arxiv", 
              "user", 
              "undefined"
            ], 
            "type": "string"
          }, 
          "term": {
            "enum": [
              "Accelerators", 
              "Astrophysics", 
              "Computing", 
              "Data Analysis and Statistics", 
              "Experiment-HEP", 
              "Experiment-Nucl", 
              "General Physics", 
              "Gravitation and Cosmology", 
              "Instrumentation", 
              "Lattice", 
              "Math and Math Physics", 
              "Other", 
              "Phenomenology-HEP", 
              "Theory-HEP", 
              "Theory-Nucl"
            ], 
            "type": "string"
          }
        }, 
        "type": "object"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "name": {
      "description": "Contains name information.", 
      "noAdditionalProperties": true, 
      "properties": {
        "numeration": {
          "enum": [
            "", 
            "Jr.", 
            "Sr.", 
            "I", 
            "II", 
            "III", 
            "IV", 
            "VI", 
            "VII", 
            "VIII"
          ], 
          "type": "string"
        }, 
        "preferred_name": {
          "type": "string"
        }, 
        "title": {
          "enum": [
            "", 
            "Sir"
          ], 
          "type": "string"
        }, 
        "value": {
          "format": ".+, .+", 
          "type": "string"
        }
      }, 
      "type": "object"
    }, 
    "native_name": {
      "description": "Stores name in native form.", 
      "items": {
        "type": "string"
      }, 
      "type": "array"
    }, 
    "new_record": {
      "$schema": "http://json-schema.org/schema#", 
      "noAdditionalProperties": true, 
      "properties": {
        "$ref": {
          "description": "URL to the referenced resource", 
          "format": "url", 
          "type": "string"
        }
      }, 
      "required": [
        "$ref"
      ], 
      "type": "object"
    }, 
    "other_names": {
      "description": "Contains other variation of names. Usually a different form of writing the primary name.", 
      "items": {
        "type": "string"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "past_emails_addresses": {
      "description": "Contains past email addresses", 
      "items": {
        "format": "email", 
        "type": "string"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "positions": {
      "items": {
        "noAdditionalProperties": true, 
        "properties": {
          "_rank": {
            "type": "string"
          }, 
          "current": {
            "type": "boolean"
          }, 
          "emails": {
            "items": {
              "format": "email", 
              "type": "string"
            }, 
            "type": "array"
          }, 
          "end_date": {
            "format": "date", 
            "type": "string"
          }, 
          "institution": {
            "noAdditionalProperties": true, 
            "properties": {
              "curated_relation": {
                "type": "boolean"
              }, 
              "name": {
                "type": "string"
              }, 
              "record": {
                "$schema": "http://json-schema.org/schema#", 
                "noAdditionalProperties": true, 
                "properties": {
                  "$ref": {
                    "description": "URL to the referenced resource", 
                    "format": "url", 
                    "type": "string"
                  }
                }, 
                "required": [
                  "$ref"
                ], 
                "type": "object"
              }
            }, 
            "type": "object"
          }, 
          "old_emails": {
            "items": {
              "format": "email", 
              "type": "string"
            }, 
            "type": "array"
          }, 
          "rank": {
            "$schema": "http://json-schema.org/schema#", 
            "enum": [
              "STAFF", 
              "SENIOR", 
              "JUNIOR", 
              "VISITOR", 
              "POSTDOC", 
              "PHD", 
              "MASTER", 
              "UNDERGRADUATE", 
              "OTHER"
            ], 
            "title": "Scientific position rank", 
            "type": "string"
          }, 
          "start_date": {
            "format": "date", 
            "type": "string"
          }
        }, 
        "type": "object"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "previous_names": {
      "description": "Contains a previous name. For example, it can be a maiden's name.", 
      "items": {
        "type": "string"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "prizes": {
      "description": "Contains prize name.t", 
      "items": {
        "description": "E.g. Nobel Prize Physics 1977, Shaw Prize 2006, Sakurai Prize 1985 FIXME: shall we separate the year?", 
        "type": "string"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "self": {
      "$schema": "http://json-schema.org/schema#", 
      "noAdditionalProperties": true, 
      "properties": {
        "$ref": {
          "description": "URL to the referenced resource", 
          "format": "url", 
          "type": "string"
        }
      }, 
      "required": [
        "$ref"
      ], 
      "type": "object"
    }, 
    "source": {
      "description": "This is the source of informatio. It is currently a mixed bags of user IDs or provenance information, e.g. arXiv etc. FIXME: we should really discuss about it. E.g. eprint, webform, Rachel.Lumpkin@durham.ac.uk(96), Fermilab, C09-05-04, KYOTOU...", 
      "items": {
        "noAdditionalProperties": true, 
        "properties": {
          "date_verified": {
            "format": "date", 
            "type": "string"
          }, 
          "name": {
            "type": "string"
          }
        }, 
        "type": "object"
      }, 
      "type": "array", 
      "uniqueItems": true
    }, 
    "status": {
      "description": "The person's status", 
      "enum": [
        "active", 
        "deceased", 
        "departed", 
        "retired"
      ], 
      "type": "string"
    }, 
    "urls": {
      "items": {
        "$schema": "http://json-schema.org/schema#", 
        "noAdditionalProperties": true, 
        "properties": {
          "description": {
            "type": "string"
          }, 
          "value": {
            "format": "url", 
            "type": "string"
          }
        }, 
        "type": "object"
      }, 
      "type": "array", 
      "uniqueItems": true
    }
  }, 
  "required": [
    "name"
  ], 
  "type": "object"
}
